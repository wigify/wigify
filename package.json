{
  "name": "wigify",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --cwd packages/desktop dev",
    "build": "turbo run build",
    "build-mac": "turbo run build-mac --filter=@wigify/desktop",
    "build-mac:local": "turbo run build-mac:local --filter=@wigify/desktop",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "coverage": "turbo run coverage",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "typecheck": "turbo run typecheck",
    "pre-commit": "turbo run lint test format"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "bun@1.0.0"
}
